      "solution": "using System;\nusing System.Linq;\n\nclass Solution\n{\n    static void Main(string[] args)\n    {\n        int N = int.Parse(Console.ReadLine());\n        int a = 0, b = 0;\n        for (int i = 0; i < N; i++)\n        {\n            string S = Console.ReadLine();\n            if (S.Contains('A'))\n                a = S.Substring(0, S.IndexOf('A'))\n                    .Where(c => c == '\\\\' || c == '/')\n                    .Count();\n            if (S.Contains('B'))\n                b = S.Substring(0, S.IndexOf('B'))\n                    .Where(c => c == '\\\\' || c == '/')\n                    .Count();\n        }\n        Console.WriteLine(a % 2 == b % 2 ? \"Same\" : \"Different\");\n    }\n}",
