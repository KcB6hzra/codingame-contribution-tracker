      "solution": "using System;\nusing System.Collections.Generic;\nusing System.Linq;\nusing System.Text;\nusing System.Threading.Tasks;\n\nnamespace ContirbutionCDG\n{\n    class Program\n    {\n        static void Main(string[] args)\n        {\n          //  Console.WriteLine(\"Entier : \");\n            int  x =  int.Parse(Console.ReadLine());\n            if (x % 2 == 0)\n            {\n                for(int b =0; b<x; b++)\n                {\n                    for(int c=0; c<x; c++)\n                    {\n                        Console.Write(\"*\");\n                    }\n                    if(b!=x-1)\n                        Console.WriteLine();\n                }\n            }\n            else\n            {\n                for(int b=0; b<x; b++)\n                {\n                    for(int c=0; c<x; c++)\n                    {\n                        if ((c + b)<x-1) { Console.Write(\" \"); }\n                        else { Console.Write(\"*\"); }\n                    }\n                    if(b!=x-1)\n                        Console.WriteLine();\n                }\n            }\n          //  Console.ReadKey();\n        }\n    }\n}\n",
