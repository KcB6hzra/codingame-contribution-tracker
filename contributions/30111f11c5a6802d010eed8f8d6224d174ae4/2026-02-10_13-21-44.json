      "solution": "using System;\n\nclass Solution\n{\n    static void Main(string[] args)\n    {\n        string mode = Console.ReadLine();\n        int x1 = int.Parse(Console.ReadLine());\n        int x2 = int.Parse(Console.ReadLine());\n\n        Console.WriteLine(mode == \"+\" ? x2 + (x2 - x1) : x2 * (x2 / x1));\n    }\n}",
