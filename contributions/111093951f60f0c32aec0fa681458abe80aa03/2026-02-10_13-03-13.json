      "solution": "import java.util.Scanner;\nclass Solution {\n    public static void main(String[] args)\n    {\n        Scanner c = new Scanner(System.in);\n        int N=c.nextInt();\n        for(int i=1;i<=N;i++)\n        {\n            for(int j=1;j<=N-i;j++) System.out.print(\" \");\n            for(int j=1;j<i;j++) System.out.print(\"* \");\n            System.out.println(\"*\");\n        }\n    }    \n}",
