      "solution": "#include <iostream>\n#include <string>\n#include <vector>\n#include <algorithm>\n\nusing namespace std;\n\n/**\n * Auto-generated code below aims at helping you parse\n * the standard input according to the problem statement.\n **/\n\nint main()\n{\n    int m;\n    int n;\n    \n    cin >> m >> n; cin.ignore();\n    string lines[n];\n    for (int i = 0; i < n; i++) {\n        getline(cin, lines[i]);\n    }\n\n    int time = 0;\n    while (true) {\n        bool isBurned = true;\n        for (int y = 0; y < n; y++) {\n            for (int x = 0; x < m; x++) {\n                if (lines[y][x] != 'F') {\n                    if (lines[y][x] == 'f') lines[y][x] = 'F';\n                    else isBurned = false;\n                }\n            }\n        }\n\n        if (isBurned) break;\n\n        for (int y = 0; y < n; y++) {\n            for (int x = 0; x < lines[0].length(); x++) {\n                if (lines[y][x] == 'F') {\n                    if (x - 1 >= 0) if (lines[y][x - 1] == '.') lines[y][x - 1] = 'f';\n                    if (x + 1 < lines[y].length()) if (lines[y][x + 1] == '.') lines[y][x + 1] = 'f';\n                    if (y - 1 >= 0) if (lines[y - 1][x] == '.') lines[y - 1][x] = 'f';\n                    if (y + 1 < n) if (lines[y + 1][x] == '.') lines[y + 1][x] = 'f';\n                }\n            }\n        }\n        time++;\n    }\n\n    // Write an answer using cout. DON'T FORGET THE \"<< endl\"\n    // To debug: cerr << \"Debug messages...\" << endl;\n\n    cout << time << endl;\n}",
