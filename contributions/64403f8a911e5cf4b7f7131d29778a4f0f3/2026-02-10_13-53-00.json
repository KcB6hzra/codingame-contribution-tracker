      "solution": "using System;\n\nclass Solution{\n    public static void Main(){\n        int n = int.Parse(Console.ReadLine());\n        \n        Console.Error.WriteLine(n);\n        \n        int lastLine=1;\n        int tri = 0;\n        while(tri+lastLine <= n){\n            tri+=lastLine;\n            lastLine++;\n        }\n        \n        int firstLine=1;\n        \n        int nbOnLastLine = n-tri;\n        if(nbOnLastLine == 0)lastLine--;\n        \n        Console.Error.WriteLine(\"Il reste \"+nbOnLastLine+\" briques pour un niveau \"+lastLine);\n        \n        while(nbOnLastLine != 0){\n            nbOnLastLine+=firstLine;\n            firstLine++;\n            if(nbOnLastLine>=lastLine){\n                nbOnLastLine -= lastLine;\n                if(nbOnLastLine != 0){\n                    lastLine++;\n                }\n            }\n        }\n        \n        Console.Error.WriteLine(\"First : \"+firstLine+\", Last : \"+lastLine);\n        \n        for(int i=firstLine; i<=lastLine; i++){\n            for(int j=0;j<i;j++)Console.Write(\"*\");\n            Console.Write('\\n');\n        }\n    }\n}",
